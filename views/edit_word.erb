<h1>Update: <%= @word.name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="edit_name">Rename word</label>
  <input id="edit_name" name="edit_name" type="text">

  <button class="btn" type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="btn_delete" type="submit">Delete word</button>
</form>

<p><a href="/words">Return to word list</a></p>