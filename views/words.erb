<h1>The Word Definer!</h1>

<h2>Words To Learn:</h2>
<div class="words_ul">
  <% if @words.any? %>
    <ul>
      <% @words.each do |word| %>
        <li><a href="/words/<%= word.id %>"><%= word.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are currently no words to display.</p>
  <% end %>
</div>
<a href="/words/new">Add a new word</a>

<form action="/words">
  <div class="form-group">
    <label for="search">Search our words</label>
    <input id="search" name="search" class="form-control" style="font-size:3vw;" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>